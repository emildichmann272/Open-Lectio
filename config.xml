<?xml version='1.0' encoding='utf-8'?>
<widget id="dichmann.one.OpenLectio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Open-Lectio</name>
    <description>
        A Lectio App
    </description>
    <author email="Lectio@Dichmann.one" href="http://www.dichmann.one" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" subdomain="true" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <param name="android-package" value="org.apache.cordova.core.NetworkManager" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.3.1" />
</widget>
